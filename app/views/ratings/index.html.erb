<h1>List of ratings</h1>

<p>Number of ratings: <%= @ratings.count %></p>

<table class="table table-hover">
	<thead>
		<th>Beer</th>
		<th>Rating</th>
		<th>Rater</th>
	</thead>
	<tbody>
		<% @ratings.each do |rating| %>
			<tr>
				<td><%= link_to rating.beer.name, beer_path(rating.beer) %></td>
				<td><%= rating.score %></td>
				<td><%= link_to rating.user.username %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<p><%= link_to 'New rating', new_rating_path, class:'btn btn-primary' %></p>