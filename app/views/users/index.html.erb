<h1>Listing users</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Username</th>
			<th>Rated beers</th>
			<th>Total ratings</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= link_to user.username, user %></td>
				<td><%= user.beers.size %></td>
				<td><%= user.ratings.size %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:'btn btn-primary' %>
