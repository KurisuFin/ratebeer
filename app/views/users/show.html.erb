<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
	<strong>Average rating:</strong> <%= @user.average_rating %>
</p>

<p>
	<strong>Member of:</strong>
	<ul>
		<% @beer_clubs.each do |beer_club| %>
			<li><%= link_to beer_club, beer_club %></li>
		<% end %>
	</ul>
</p>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Rating</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
			<% @user.ratings.each do |rating| %>
				<tr>
					<td><%= rating.beer.name %></td>
					<td><%= rating.score %></td>
					<td><%= link_to 'Delete', rating, method: :delete, data: {confirm: 'Are you sure?'} %></td>
				</tr>
			<% end %>
	</tbody>
</table>

<p>
	<strong>Favorite style:</strong>
	<%= @user.favorite_style %>
</p>

<p>
	<strong>Favorite brewery:</strong>
	<%= @user.favorite_brewery %>
</p>

<p><%= edit_and_destroy_buttons(@user) %></p>